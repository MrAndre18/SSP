  main.main.practices.container-fluid.px-0

    .practices__header
      .practices__header-content
        h1.practices__header-title Банкротство и корпоративные конфликты
        span.practices__header-number 01

    .practices__content
      include ../components/_all-practices.pug

      ul.practices__timeline
